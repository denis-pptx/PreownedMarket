{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "ElasticConfiguration": {
    "Uri": "http://elasticsearch:9200"
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MySQL": "Server=identity.db;Port=3306;Database=identity_db;Uid=dbuser;Pwd=dbpassword;"
  },
  "JwtOptions": {
    "Issuer": "denis-konchik-server",
    "Audience": "denis-konchik-client",
    "SecretKey": "mysupersecret-secretsecretsecretkey-123",
    "AccessTokenLifeTimeMinutes": 60, // 1 hour
    "RefreshTokenLifeTimeMinutes": 1440 // 1 day
  },
  "MessageBrokerOptions": {
    "Host": "amqp://market.mq:5672",
    "Username": "guest",
    "Password": "guest"
  }
}